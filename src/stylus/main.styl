@import "reset.styl"


body
  font-family 'Lato', "Gill Sans", Helvetica, Arial, sans-serif
  font-weight 200
  -webkit-overflow-scrolling touch

a
  color black
  text-decoration none
  &:hover
    text-decoration underline
  &:active
    color #666
.fontFigures
  font-family "Avenir Next", Helvetica, sans-serif
  font-weight 400

.pageWrapper
  max-width 1200px
  margin 0 auto
  padding 0

h1, h2
  text-align center

h2
  font-weight 200
  text-transform uppercase
  font-size 2rem
  padding 6rem 0 2rem 0

h4
  font-size .75rem
  text-transform uppercase
  color #666

.clear
  clear both

nav
  text-align center

table
  width 100%
td, th
  text-align left
  vertical-align middle
  padding .5em
  &.center
    text-align center
  &.right
    text-align right
  img
    max-height 2em
    vertical-align middle
    margin-right 1em

td
  border-bottom 1px solid #EEE
th
  padding .5em
  border-bottom 1px solid #DDD

a.button
  display inline-block
  box-shadow 0 2px 5px 0 rgba(black, 0.26)
  background linear-gradient(#555, #333)
  border-radius 4px
  color white
  text-align center
  text-decoration none
  padding .5rem 1rem
  &:hover
    background linear-gradient(#888, #444)

.tabs .tab
  display none
  width 100%
  &.active
    display block

body > header
  background white
  h1
    padding 2rem
    padding-bottom 4rem
    background white
    img
      max-width 100%
  nav
    margin 0 auto
    padding-bottom 1em
    background white
    width 100%
    font-size 1em
    ul
      margin 0 auto
      max-width 1000px
      display flex
      flex-wrap wrap
      justify-content center
      a
        z-index 2
        margin 1em 1em 0 1em
        font-size 1.2em
        text-decoration none
        display inline-block
        padding .4em
        color black
        text-transform uppercase
        position relative
        &:before
          content ''
          display block
          position absolute
          z-index -1
          background #AAA
          height 100%
          bottom 0
          left 0
          width 100%
          transform scaleY(0.1)
          transform-origin bottom
          transition transform .1s ease-out, color .1s ease-in, box-shadow .1s ease-in

        &:hover
          text-decoration none
          color white
          &:before
            transform scaleY(1)
            box-shadow 0 3px 15px rgba(black, .2)

.country.block
  margin 1em auto
  background #efefef
  border 1px solid #DDD
  border-radius 4px
  padding .5em
  display inline-block
  text-align center
  .countryName
    display block

.country.inline
  display inline-block
  height 24px
  vertical-align middle
  img
    height 24px
    float left
  .countryName
    display none
    position absolute
    margin-top -32px
    margin-left -20px
    background white
    box-shadow 0 3px 10px rgba(black, .2)
    padding .5em
    border-radius 4px
  &:hover
    .countryName
      display block

body.scroll > header nav
  position fixed
  top 0
  z-index 1000
  font-size .6rem
  box-shadow 0 1px 4px rgba(black, .2)
  a
    border-bottom-width 2px
  ul
    max-width 600px


@media only screen and (max-width: 500px)
  body > header > nav
    font-size .6rem


