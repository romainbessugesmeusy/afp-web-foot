
//@import "../partials/liveMatchScoreboard.styl"

.liveMatchScoreboard
  background white
  overflow hidden
  border-radius 4px
  box-shadow 0 5px 10px rgba(black, .8)
  margin 2em
  flex 1 0 auto
  max-width 500px

  header
    display flex
    align-items flex-start

  .time
    background linear-gradient(#333, #666)
    border-radius 0 0 4px 4px
    color white
    font-weight 500
    padding .2rem
    margin 0 auto
    font-size 1.1rem
    border 1px solid #333
    text-shadow 0 1px 2px black
    flex 1
    text-align center

  .versus
    font-size 2em
    font-weight 900
    font-style italic
  .content
    display flex
    align-items center

  span.name
    white-space nowrap
    font-size .9em
  .team
    text-align center
    padding 0 1em 1em 1em
    width 150px
    flex 1
    overflow hidden
    img
      max-height 100px
      display inline-block
      filter drop-shadow(0 5px 10px rgba(black, .3))

    &.home
      padding-right 0
    &.away
      padding-left 0

  .score
    text-align center
    .goals
      font-size 1.8em
      font-weight 700
      margin-bottom .5em

    .penaltyShootouts
      font-size 1.5em
      font-weight 700
      margin-bottom .5em
    span
      display inline-block
      width 1.2em
  .cards
    padding .5em
    margin-bottom -20px

  .card
    text-align center
    display block
    float left
    line-height 27px
    margin 1px
    height 27px
    width 20px
    border-radius 2px
    color white
    font-size .9em
    &.yellow
      background #D2C738
    &.red
      background #D0021B
    &:empty
      opacity 0
      &:before
        content: ' '
  footer
    background #EEE
    padding .5em
    font-size .7em
    text-align center

  &.EMENC
    header .time
      background linear-gradient(#c35050,#fd0b0b)
      border-color #970000
      animation glowingTime 2s infinite

@keyframes glowingTime
  0%
    background linear-gradient(#c35050,#fd0b0b)
    box-shadow 0 0 10px rgba(255,0,0,0.5)
  50%
    background linear-gradient(#c35636,#FF0000)
    box-shadow 0 0 0 rgba(255,0,0,1)
  100%
    background linear-gradient(#c35050,#fd0b0b)
    box-shadow 0 0 10px rgba(255,0,0,0.5)

#today
  overflow hidden

  .competition > header
    h3
      color white
      font-weight 600
      text-shadow 1px 1px 1px black
    img
      max-height 200px
  .competition
    padding-top 1em
    h5
      font-weight 200
      color black
      text-transform uppercase
  .matches.highlighted
    box-shadow inset 0 -5px 50px rgba(black, .6)
    background linear-gradient(rgba(#284300, .9), rgba(#284300, 0)), url('/img/grass-light.jpg')
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    border-bottom 1px solid black

  .matches.other
    padding 1em
    display flex
    flex-wrap wrap
    justify-content center
    li
      width 380px
      margin 0 auto
      list-style-type none

.competitions
  .wrapper
    display flex
    flex-wrap wrap

.matchesWrapper
  max-height 400px
  overflow-y auto

article.competition
  flex 1 0 auto
  text-align center
  border-right 1px solid #EEE
  border-bottom 1px solid #EEE
  max-width 100%
  min-width 280px
  header
    background #F9F9F9
    padding 1rem
    a
      display block
      text-decoration none
      color black
      font-size .8rem
      img
        display block
        margin .5rem auto
        max-height 150px
  ul
    padding 1.5rem 0
    list-style-type none
    margin 0 auto
    max-width 600px

  li.phase
    font-weight 600
    font-size .8rem
    text-transform uppercase
    padding 1rem 0 .5rem 0

