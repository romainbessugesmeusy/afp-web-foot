#liveMatches
  .matches
    box-shadow inset 0 -5px 50px rgba(black, .6)
    background linear-gradient(rgba(#284300, .9), rgba(#284300, 0)), url('https://campsi.imgix.net/56261291c0e9425a0b9404d8-H1ZfU5K8.jpg?fit=max&h=1000')
    text-align center
    border-bottom 1px solid black

.competitions
  .wrapper
    display flex
    flex-wrap wrap

.matchesWrapper
  max-height 400px
  overflow-y scroll

.competition
  flex 1
  text-align center
  border-right 1px solid #EEE
  border-bottom 1px solid #EEE
  min-width 400px
  header
    background #F9F9F9
    padding 1rem
    a
      display block
      text-decoration none
      color black
      font-size .8rem
      img
        display block
        margin .5rem auto
  ul
    padding 1.5rem 0
    list-style-type none
    margin 0