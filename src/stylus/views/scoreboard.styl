
//@import "../partials/liveMatchScoreboard.styl"

.liveMatchScoreboard
  background white
  border-radius 4px
  box-shadow 0 5px 10px rgba(black, .8)
  margin 2em

  header
    display flex
    align-items flex-start

  .time
    background linear-gradient(#333, #666)
    border-radius 0 0 4px 4px
    color white
    font-weight 500
    padding .2rem
    margin 0 auto
    font-size 1.1rem
    border 1px solid #333
    text-shadow 0 1px 2px black
    flex 1
    text-align center


  .content
    display flex
    align-items center

  .team
    text-align center
    padding 0 1em 1em 1em
    width 150px
    flex 1
    img
      max-height 100px
      display inline-block
      filter drop-shadow(0 5px 10px rgba(black, .3))

    &.home
      padding-right 0
    &.away
      padding-left 0

  .score
    text-align center
    .goals
      font-size 1.8em
      font-weight 700
      margin-bottom .5em

    .penaltyShootouts
      font-size 1.5em
      font-weight 700
      margin-bottom .5em
    span
      display inline-block
      width 1.2em
  .cards
    padding .5em

  .card
    text-align center
    display inline-block
    line-height 27px
    margin 1px
    height 27px
    width 20px
    border-radius 2px
    color white
    font-size .9em
    &.yellow
      background #D2C738
    &.red
      background #D0021B

#liveMatches
  .matches
    box-shadow inset 0 -5px 50px rgba(black, .6)
    background linear-gradient(rgba(#284300, .9), rgba(#284300, 0)), url('/img/grass-light.jpg')
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    border-bottom 1px solid black

.competitions
  .wrapper
    display flex
    flex-wrap wrap

.matchesWrapper
  max-height 400px
  overflow-y auto

.competition
  flex 1 0 auto
  min-width 330px
  text-align center
  border-right 1px solid #EEE
  border-bottom 1px solid #EEE
  header
    background #F9F9F9
    padding 1rem
    a
      display block
      text-decoration none
      color black
      font-size .8rem
      img
        display block
        margin .5rem auto
        max-height 150px
  ul
    padding 1.5rem 0
    list-style-type none
    margin 0

  li.phase
    font-weight 600
    font-size .8rem
    text-transform uppercase
    padding 1rem 0 .5rem 0

