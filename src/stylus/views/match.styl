#liveMatch
  text-align center
  > header
    background white
    padding-top 5rem
  .competition
    text-align center
    box-shadow 0 0 10px rgba(black, .2)
    margin 0 auto
    width 200px
    min-width 200px
    padding 2rem
    border-radius 8px 8px 0 0
    background white
    img
      max-width 100%

  .status
    background #E6153B
    color white
    text-transform uppercase
    padding .5rem
    font-size 1.5rem
    font-weight 100

  .timeAndScore
    box-shadow 0 0 10px rgba(black, .2)
    border-right 1px solid black
    border-left 1px solid black
    background linear-gradient(#000, #666666)
    margin 0 auto
    width 200px
    padding 1rem
    color white
    .time
      font-size 2rem
      font-weight 600
      text-shadow 0 1px 2px black
      margin-bottom 2rem
    .score span
      background white
      display inline-block
      margin 1rem
      font-size 2rem
      color black
      border-radius 4px
      box-shadow 0 1px 3px black
      padding .6rem .5rem .4rem .5rem

    .penaltyShootoutScore
      display flex
      //outline 1px solid yellow
      justify-content space-between
      span
        border 1px solid #555
        border-radius 4px
        box-shadow inset 0 2px 4px #222
        text-shadow 0 1px 2px black
        font-weight bold
        background #444
        display block
        width 40px
        height 50px
        line-height 50px
        font-size 1.2rem
        top 0
        margin 0
  .summary
    h3
      font-weight 200
      font-size 2rem
      padding 1rem
      padding-bottom 0
      text-transform uppercase
    .team
      position absolute
    .logo
      //outline 1px blue solid
      height 120px
      img
        max-height 120px
        filter: drop-shadow(0 5px 10px rgba(black, .3));

    .home
      right 50%
      margin-right 100px
    .away
      left 50%
      margin-left 100px

  .tab.feed
    box-shadow inset 0 10px 30px rgba(black, .5)
    overflow: hidden; // added for pseudo-element
    position: relative; // added for pseudo-element
    padding 1rem
    min-height 800px
    &::before
      content ' '
      position fixed // instead of background-attachment
      width 100%
      height 100%
      top 0
      left 0
      background-color white
      background url('/img/grass-light.jpg') no-repeat center center
      background-size cover
      will-change transform // creates a new paint layer
      z-index -1

    .row.away
      text-align left

    .row.home
      text-align right

    .event
      margin-top 1rem
      background linear-gradient(white, #EEE)
      padding 1rem
      box-shadow 0 5px 10px rgba(black, .6)
      display inline-block
      p
        display inline-flex
        align-items center
        width 100%
      .players
        flex 1
        margin 0 1rem
        font-size 1.2rem
        font-weight 400
      .time
        font-weight 600
        font-size 1.6rem

      &.home
        margin-right 48%
        p
          flex-direction row-reverse

        .time
          margin-left 1rem

      &.away
        margin-left 48%
        .time
          margin-right 1rem

      &.both
        .comment
          max-width 650px

      .comment
        background white
        border 1px solid #DDD
        margin-top .5rem
        max-width 400px
        line-height 1.5rem
        text-align left
        p
          padding .5rem
        img
          width 100%
    .group

      display inline-block
      background #FFF
      box-shadow 0 5px 15px rgba(black, .8)
      padding 2rem
      max-width 650px
      text-align justify

      .comment
        margin-bottom 1rem
        line-height 1.5em
        font-size .9rem
        &:first-child
          font-size 1.2rem
        &:last-child
          margin-bottom 0
        img
          margin-top 1rem
          width 100%

#composition .compositionWrapper
  display flex

  .line
    display flex
    justify-content center
    align-content flex-start
    flex-wrap wrap
    border-bottom 1px solid #EFEFEF
    margin-bottom 1rem
  .team
    flex 1
    padding 3rem 0
  .home
    border-right 1px solid #EEE

figure
  position relative
  figcaption
    position absolute
    bottom 5px
    right 5px
    color white
    text-shadow 1px 1px 0 #000
    font-size .9rem

.penaltyShootoutsOld
  .row
    margin-bottom -50px
    &.home
      text-align left
    &.away
      text-align right
  .try
    display inline-block
    width 45%

.penaltyShootoutOld
  border-bottom 1px solid #EEE
  background white
  display flex
  align-items center
  position relative
  //border 1px solid red
  .teamPlayer
    text-align center
  //border 1px solid yellow
  .result .number
    color white
    font-weight 600
    border-radius 100px
    background #7ED321
    display inline-block
    height 40px
    width 40px
    line-height 40px
    text-align center
    text-shadow 1px 1px 2px rgba(black, .4)

  &.missed .result .number
    background #E6153B
  &.home
    flex-direction row-reverse

.penaltyShootoutsWrapper
  display flex
  .team
    padding 1rem
    flex 1
    display flex
    flex-wrap wrap
    justify-content center
    &.home
      border-right 1px solid #ddd
  .shootout
    margin-bottom 50px

    .shotNumber
      color white
      font-weight 600
      border-radius 100px
      background #7ED321
      display block
      height 40px
      width 40px
      line-height 40px
      text-align center
      text-shadow 1px 1px 2px rgba(black, .4)
      margin 0 auto

    &.missed .shotNumber
      background #E6153B
