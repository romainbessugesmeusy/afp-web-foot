#liveMatch
  text-align center
  padding-top 5rem
  .competition
    text-align center
    box-shadow 0 0 10px rgba(black, .2)
    margin 0 auto
    width 200px
    padding 2rem
    border-radius 8px 8px 0 0
  .status
    background #E6153B
    color white
    text-transform uppercase
    padding .5rem
    font-size 1.5rem
    font-weight 100
  .timeAndScore

    border-right 1px solid black
    border-left  1px solid black
    background linear-gradient(#000, #666666)
    margin 0 auto
    width 200px
    padding 1rem
    color white
    .time
      font-size 2rem
      font-weight 600
      text-shadow 0 1px 2px black
      margin-bottom 2rem
    .score span
      background white
      display inline-block
      margin 1rem
      font-size 2rem
      color black
      border-radius 4px
      box-shadow 0 1px 3px black
      padding .6rem .5rem .4rem .5rem
  .summary
    h3
      font-weight 200
      font-size 2rem
      padding 1rem
      padding-bottom 0
      text-transform uppercase
    .team
      position absolute
    .logo
      //outline 1px blue solid
      height 120px
      img
        max-height 120px
        filter: drop-shadow(0 5px 10px rgba(black, .3));

    .home
      right 50%
      margin-right 100px
    .away
      left 50%
      margin-left 100px

  .tab.feed
    box-shadow inset 0 10px 30px rgba(black, .5)
    background-image url('https://campsi.imgix.net/56261291c0e9425a0b9404d8-H1ZfU5K8.jpg?fit=max&h=1000')
    padding 1rem
    .row.away
      text-align left
    .row.home
      text-align right
    .event
      margin-bottom 1rem
      background white
      padding 1rem
      box-shadow 0 5px 10px rgba(black, .6)
      border-radius 8px
      display inline-flex
      align-items center
      img
        margin 0 .5rem


      .time
        font-weight 600

      &.home
        flex-direction row-reverse
        margin-right 48%
        .time
          margin-left 1rem
      &.away
        margin-left 48%
        .time
          margin-right 1rem


