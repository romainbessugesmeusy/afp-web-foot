#liveMatch
  text-align center
  > header
    background url(/img/Euro-2016-Credit-Remy-Martineau.jpg) white
    background-size cover
    background-position bottom
    padding-top 5rem

  .competitionWrapper
    perspective 1000px

  .competition
    transition transform .2s linear, box-shadow .3s linear
    transform-origin bottom
    display block
    box-sizing border-box
    text-align center
    box-shadow 0 0 10px rgba(black, .5)
    margin 0 auto
    width 200px
    min-width 200px
    padding 2rem
    border-radius 8px 8px 0 0
    background white
    &:hover
      transform rotateX(-10deg)
      box-shadow 0 0 20px rgba(black, .9)
    img
      max-width 100%


  .status
    background #E6153B
    color white
    text-transform uppercase
    padding .5rem
    font-size 1.5rem
    font-weight 100

  .summaryMobile
    display none

  .summary
    height 200px
    background white
    position relative
    display flex
    .team
      padding 1em
      flex 1

    .fixed
      display none

    .normal
      display block

    h3
      font-weight 200
      font-size 2em
      padding-bottom 0
      text-transform uppercase
    .logo
      //outline 1px blue solid
      height 9em
      img
        max-height 100%
        filter: drop-shadow(0 5px 10px rgba(black, .3));

    .home
      text-align right
    .away
      text-align left

  .scorers
    font-size .9em
    padding .3em 0
    a
      text-decoration none
      color #333
      &:hover
        color black
        text-decoration underline
  .timeAndScore
    transition box-shadow linear .2s
    box-shadow 0 0 10px rgba(black, .2)
    border-right 1px solid black
    border-left 1px solid black
    background linear-gradient(#000, #666666)
    margin 0 auto
    width 200px
    height 100%
    padding 1em
    color white
    .time
      font-size 2em
      font-weight 600
      text-shadow 0 1px 2px black
      margin-bottom .5em

    .score
      font-size 2em
      span
        background white
        display inline-block
        color black
        border-radius 4px
        box-shadow 0 1px 3px black
        padding .4em
        margin .1em

        &.penaltyShootout
          border 1px solid #555
          box-shadow inset 0 2px 4px #222
          text-shadow 0 1px 2px black
          background #444
          color white

.scroll #liveMatch
  .fixed
    display block
  .normal
    display none
  .summary
    position fixed
    width 100%
    top 50px
    left 0
    z-index 100
    height 100px
    box-shadow 0 10px 40px rgba(black, .5)
    font-size .7rem
    .score
      font-size 2em
    .team
      display flex
      align-items center
      h3
        flex 1
        margin 0 1rem
      &.away
        flex-direction row-reverse

    .logo
      height 100px

  .summaryPlaceholder
    height 200px
    background white

  .scorers
    display none



@import '../partials/matchFeed.styl'
@import '../partials/matchCompo.styl'
@import "../partials/penaltyShootouts.styl"
@import "../partials/matchInfos.styl"

@media only screen and (max-width: 500px)

  .tab.feed
    font-size .8rem
    .event
      min-width auto
      width auto
      &.both
        width 100%

  #liveMatch > header > .summary,
  .scroll #liveMatch > header > .summary
    display none

  #liveMatch .summaryMobile
    display block
    .row
      background white
      display flex
      .team
        text-align center
        padding 1rem
        flex 1
        .logo
          width 100px
          display inline-block
          img
            width 100%

    .timeAndScore
      width 100%

