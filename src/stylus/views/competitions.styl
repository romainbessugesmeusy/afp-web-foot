#competitions
  .group
    padding 2em
    h2
      padding 1em
      margin 0
  .wrapper
    display flex
    flex-wrap wrap
    justify-content center
    max-width 1200px
    margin 0 auto
  .competition
    text-align center
    background white
    color black
    padding 1em
    margin 1em
    box-shadow 0 2px 10px rgba(black, .1)
    text-decoration none
    transition transform .05s ease-in, box-shadow .1s linear
    max-width 200px
    border-radius 4px
    overflow hidden
    &:hover
      transform scale3d(1.1,1.1,1.1)
      box-shadow 0 10px 20px rgba(black, .2)

    img
      max-height 200px
      display block
      margin 0 auto

    span
      display block
      padding 1em

  .finished
    background #EEE
    border-top 1px solid #DDD
    border-bottom 1px solid #DDD

