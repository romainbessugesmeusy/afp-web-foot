.rankings
  table
    margin-top 1em
    width 100%
  td, th
    text-align right
    vertical-align middle
    padding 0 .5em
    img
      max-height 2em
      vertical-align middle
      margin-right 1em

  td
    border-bottom 1px solid #EEE
  th
    padding .5em
    border-bottom 1px solid #DDD
  .teamName
    text-align left

#competition

  padding 2em 0

  .phase
    margin-bottom 1em

  .teamsWrapper
    display flex
    flex-wrap wrap
    perspective 1000px
    max-width 1200px
    margin 0 auto
    justify-content center

  .team
    transition transform .1s linear
    display block
    text-decoration none
    color black
    padding 1em
    text-align center
    width 150px
    overflow hidden
    &:hover
      text-decoration underline
      transform scale3d(1.1, 1.1, 1.1)

    .logo
      position relative
    .logo:after
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      opacity 0
      background linear-gradient(135deg, rgba(white,.2) 0%, rgba(white,.5) 50%, rgba(white,.1) 51%, rgba(white,0) 71%, rgba(white,0) 100%);
      transition opacity .4s linear, transform .4s linear
      transform scale3d(2, 2, 2)

    &:hover .logo:after
      opacity 1
      transform scale3d(1,1,1)

    img
      filter drop-shadow(0 5px 10px rgba(black, .3))

  header
    display flex
    flex-wrap wrap
    max-width 1200px
    margin 0 auto
    aside
      margin 1em
      padding 1em
      max-width 250px
      box-shadow 0 5px 20px rgba(black, .1)
      border-radius 4px
      img
        max-width 100%

      dl
        padding 1em
        margin-top 2em

      dt
        font-weight bold
        text-transform uppercase
        font-size .7em
        color #666
        margin-top 1.5em
        margin-bottom .5em
    .infos
      padding 1em
      flex 1
    h1
      text-transform uppercase
      text-align left
      margin-bottom 1em
      font-size 2em
      font-weight 400
      color #666

h3 em
  font-weight 200
  color #666

.month
  margin-bottom 2em
  display none

  &.active
    display block

.days
  display flex
  flex-wrap wrap
  justify-content center

.day
  width 380px
  border 1px solid #EEE
  margin 1em
  border-radius 8px
ul
  padding .5em
h5
  text-align center
  color #999
  padding .5em

