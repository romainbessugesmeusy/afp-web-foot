#competition
  padding 2em 0

  .competitionWrapper
    max-width 1200px
    margin 0 auto

  .teamsWrapper
    display flex
    flex-wrap wrap

  .team
    display block
    text-decoration none
    color black
    padding 1em
    text-align center
    width 150px
    &:hover
      text-decoration underline

  header
    display flex
    flex-wrap wrap
    .logo
      margin 1em
      padding 1em
      max-width 250px
      box-shadow 0 5px 20px rgba(black,.3)
      border-radius 4px
      img
        max-width 100%
    .infos
      padding 1em
    h1
      text-transform uppercase
      font-size 2em
      font-weight 400
      color #666

