

.penaltyShootoutsWrapper
  display flex
  .team
    padding 1rem
    flex 1
    display flex
    flex-wrap wrap
    justify-content center
    &.home
      border-right 1px solid #ddd
  .shootout
    margin-bottom 50px

    .shotNumber
      color white
      font-weight 600
      border-radius 100px
      background #7ED321
      display block
      height 40px
      width 40px
      line-height 40px
      text-align center
      text-shadow 1px 1px 2px rgba(black, .4)
      margin 0 auto

    &.missed .shotNumber
      background #E6153B
