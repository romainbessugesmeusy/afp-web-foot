
.sectionNavbar
  display block
  color white
  background linear-gradient(#5A5A5A, #151515);
  font-size 1rem
  border-top 1px solid black
  border-bottom 1px solid black
  a
    text-transform uppercase
    transition background .2s linear
    padding .3rem .5rem
    margin 4px
    margin-right 1rem
    display inline-block
    text-shadow 1px 1px 1px black
    border-radius 4px
    border 1px solid rgba(black, .3)
    color white
    text-decoration none
    &:hover
      border 1px solid rgba(black, .7)
      background rgba(white, .1)
    &:last-child
      margin-right 0
    &.active, &:active
      background linear-gradient(#000, #383838)

    &.important
      background #E6153B
      color white
      font-weight 400
  &.light
    border-color #f0f0f0
    background linear-gradient(#fbfbfb, #f4f4f4)
    a
      color black
      text-shadow none
      border-color transparent
      &:hover
        border 1px solid #EEE
        background rgba(black, .05)
      &.active, &:active
        border 1px solid #EEE
        background linear-gradient(#DDD, #EEE)

      &.important
        color white
        font-weight 400