.upcomingMatch, .pastMatch
  display flex
  color black
  padding .2rem 0
  text-align center
  position relative
  text-decoration none

  &:hover
    background #EEE

  .home
    flex 1
    text-align right
  .away
    flex 1
    text-align left

  .time, .goals
    background #C9C9C9
    margin 0 1rem
    padding .2rem
    color white
    text-shadow 0 1px 1px #222
    font-weight 600
    font-size .8rem
    display inline-block
    border-radius 4px

  .goals
    margin 0 .5rem
    padding .3rem
    &.winner
      background black
