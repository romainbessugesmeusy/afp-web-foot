.teamPlayer
  position relative
  display inline-block
  vertical-align top
  padding 1rem
  width 100px
  font-size .9rem
  transition transform linear .1s
  &:hover
    transform scale3d(1.1, 1.1, 1.1)

  a
    text-decoration none
    color #555
    height 2em
    display block
    &:hover
      color black
      text-decoration underline

  svg
    display block
    margin 0 auto
    margin-bottom 5px
    height 45px
  path
    fill #AAA
  .number
    position absolute
    top 30px
    left 0
    width 100%
    text-align center
    display block
    color white
    font-weight 600
    font-size .9rem
    text-shadow 0 1px 1px rgba(black, .5)

  &:hover .faceshot
    display block

.faceshot
  position absolute
  z-index 10
  display none
  padding .5rem
  background white
  box-shadow 0 6px 15px rgba(black, .3)
  left 50%
  top -250px
  margin-left -75px
  text-align center
  border-radius 4px
  p.name
    padding .5em
  p.age
    font-size .8em

