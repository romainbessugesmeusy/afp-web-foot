<section id="liveMatches">
    <h2>Matches en cours</h2>
    <div class="matches">
        {{> liveMatch }}
        {{> liveMatch }}
        {{> liveMatch }}
        {{> liveMatch }}
    </div>
</section>
<section id="upcomingMatches">
    <h2>Matches à venir</h2>
    <div class="tabs">
        <nav class="sectionNavbar">
            {{#each upcomingDateList}}
                <a class="{{#if @first}}active{{/if}}" href="#upcomingMatches-date-{{this}}">{{this}}</a>
            {{/each}}
        </nav>
        <div class="competitions">
            {{#each upcomingDateList as |date| }}
                <div class="tab date {{#if @first}}active{{/if}}" id="upcomingMatches-date-{{date}}">
                    <div class="wrapper">
                        {{#each_competition @root.upcomingMatches date}}
                            {{> competitionUpcomingMatches }}
                        {{/each_competition}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<section id="finishedMatches">
    <h2>Matches Terminés</h2>
    <div class="tabs">
        <nav class="sectionNavbar">
            {{#each pastDateList}}
                <a class="{{#if @first}}active{{/if}}" href="#pastMatches-date-{{this}}">{{this}}</a>
            {{/each}}
        </nav>
        <div class="competitions">
            {{#each pastDateList as |date| }}
                <div class="tab date {{#if @first}}active{{/if}}" id="pastMatches-date-{{date}}">
                    <div class="wrapper">
                        {{#each_competition @root.pastMatches date}}
                            {{> competitionPastMatches }}
                        {{/each_competition}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<div style="height: 400px"></div>