<div class="{{side}}
    {{#if penaltyShootoutGoals}}withPenaltyShootout{{/if}}
    {{#if winner}}winner{{/if}}
    {{#if qualified}}qualified{{/if}}">
    <span class="goals fontFigures">
        {{#if goals}}
            {{goals}}
        {{else}}
            &nbsp;
        {{/if}}
    </span>
    <span class="penaltyShootout fontFigures">
        {{penaltyShootoutGoals}}
    </span>
    {{#if qualified}}<span class="star"> â˜… </span>{{/if}}
    <span class="name">{{name}}</span>
    <span class="cards fontFigures">
        {{#if cards.yellow}}
            <span class="card yellow">{{cards.yellow}}</span>
        {{/if}}
        {{#if cards.red}}
            <span class="card red">{{cards.red}}</span>
        {{/if}}
    </span>
</div>