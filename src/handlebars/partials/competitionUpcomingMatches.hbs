<article class="competition upcomingMatches">
    {{> scoreboardCompetitionHeader }}
    <div class="matchesWrapper">
        <ul>
            {{#group matches by="phase"}}
                <li class="phase">{{value}}</li>
                {{#each items}}
                    <li>{{> upcomingMatch this}}</li>
                {{/each}}
            {{/group}}

        </ul>
    </div>
</article>