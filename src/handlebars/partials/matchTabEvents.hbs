<div class="tab feed active" id="events">

    {{#if hasComments}}
        <button id="toggleComments"
                data-state="on"
                data-message-on="{{t 'hideCommentsButton' 'app.match.events' 'Masquer les commentaires'}}"
                data-message-off="{{t 'showCommentsButton' 'app.match.events' 'Afficher les commentaires'}}">
            {{t 'hideCommentsButton' 'app.match.events' 'Masquer les commentaires'}}
        </button>
    {{/if}}
    <div class="eventsWrapper">
        {{#each events}}
            <div class="row {{side}}">
                {{#if group}}
                    <div class="group {{ group }}">
                        {{#each comments}}
                            {{> matchComment}}
                        {{/each}}
                    </div>
                {{else}}
                    <div class="event {{type}} {{side}} {{#if comment}}withComment{{/if}}" title="{{t type 'const'}}">
                        <p class="eventType">
                            <span class="time fontFigures">{{time}}'</span>
                            <a href="/players/{{players.0.id}}" class="player">{{players.0.name}}</a>
                            {{#if players.1.name}}
                                <span class="subArrow">â‡„</span>
                                <a href="/players/{{players.1.id}}" class="player sub">{{players.1.name}}</a>
                            {{/if}}
                            {{#if type}}
                                <img class="type" src="/img/icons/{{type}}.png" height="60"/>
                            {{/if}}
                        </p>
                        {{#with comment }}
                            {{> matchComment}}
                        {{/with}}
                    </div>
                {{/if}}
            </div>
        {{/each}}
    </div>
</div>