<header>
    <div class="competitionWrapper">
        <a class="competition" href="/competitions/{{competition.id}}">
            {{competition.name}}
            <img src="/data/events/{{competition.id}}.png" alt="{{competition.name}}">
        </a>
    </div>
    <div class="status {{status}}">
        {{matchStatus this}}
    </div>
    <div class="summaryPlaceholder"></div>
    <div class="summaryMobile">
        <div class="row">
            <div class="team home {{#if home.winner}}winner{{/if}} {{#if home.qualified}}qualified{{/if}}">
                <h3><a href="/teams/{{home.id}}">{{home.name}}</a></h3>
                <div class="logo">
                    <img src="/data/teams/logos/{{home.id}}.png" alt="{{home.name}}">
                </div>
            </div>
            <div class="team away {{#if away.winner}}winner{{/if}} {{#if away.qualified}}qualified{{/if}}">
                <h3><a href="/teams/{{away.id}}">{{away.name}}</a></h3>
                <div class="logo">
                    <img src="/data/teams/logos/{{away.id}}.png" alt="{{away.name}}">
                </div>
            </div>
        </div>
        <div class="timeAndScore fontFigures {{#if penaltyShootouts}}withPenaltyShootouts{{/if}}">
            <div class="time">{{matchTime this}}</div>
            <div class="score fixed">
                {{#if penaltyShootouts}}
                    <span class="penaltyShootout home">{{home.penaltyShootoutGoals}}</span>
                {{/if}}
                <span class="home">{{home.goals}}</span>
                <span class="away">{{away.goals}}</span>
                {{#if penaltyShootouts}}
                    <span class="penaltyShootout away">{{away.penaltyShootoutGoals}}</span>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="summary">
        <div class="team home {{#if home.winner}}winner{{/if}} {{#if home.qualified}}qualified{{/if}}">
            <h3><a href="/teams/{{home.id}}">{{home.name}}</a></h3>
            {{> matchScorers home}}
            <div class="logo">
                <img src="/data/teams/logos/{{home.id}}.png" alt="{{home.name}}">
            </div>
        </div>
        <div class="timeAndScore fontFigures {{#if penaltyShootouts}}withPenaltyShootouts{{/if}}">
            <div class="time">{{matchTime this}}</div>
            <div class="score fixed">
                {{#if penaltyShootouts}}
                    <span class="penaltyShootout home">{{home.penaltyShootoutGoals}}</span>
                {{/if}}
                <span class="home">{{home.goals}}</span>
                <span class="away">{{away.goals}}</span>
                {{#if penaltyShootouts}}
                    <span class="penaltyShootout away">{{away.penaltyShootoutGoals}}</span>
                {{/if}}
            </div>
            <div class="score normal">

                <span class="home">{{home.goals}}</span>
                <span class="away">{{away.goals}}</span>

                {{#if penaltyShootouts}}
                    <div class="penaltyShootouts">
                        <span class="penaltyShootout home">{{home.penaltyShootoutGoals}}</span>
                        <span class="penaltyShootout away">{{away.penaltyShootoutGoals}}</span>
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="team away {{#if away.winner}}winner{{/if}} {{#if away.qualified}}qualified{{/if}}">
            <h3><a href="/teams/{{away.id}}">{{away.name}}</a></h3>
            {{> matchScorers away}}
            <div class="logo">
                <img src="/data/teams/logos/{{away.id}}.png" alt="{{away.name}}">
            </div>
        </div>

    </div>
</header>